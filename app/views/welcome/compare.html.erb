<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<link rel="stylesheet" href="http://libs.cartocdn.com/cartodb.js/v3/3.15/themes/css/cartodb.css" />
	<style type="text/css">
		select, input {
			padding: 8px 15px;
			border: 0;
			border-radius: 15px;
			color: white;
			cursor: pointer;
			font-size: 14px;

			@media screen and (min-width: 800px){
				font-size: 15px;
			}

			@media screen and (min-width: 1280px){
				font-size: 17px;
			}
		}

		select {
			background-color: grey;
		}

		select:hover{
			color:#A0CC52;
			background-color: white;
			border: 1px solid lightgrey;
		}

		select option {
			-webkit-appearance: none;
			appearance: none;
			min-height: 30px;
			font-size: 14px;
			color: white;
			background-color: grey;

			@media screen and (min-width: 800px){
				font-size: 15px;
			}

			@media screen and (min-width: 1280px){
				font-size: 17px;
			}
		}

		select option:hover {
			cursor: pointer !important;
			background-color: #A0CC52;
		}

		input {
			background-color: grey;
			border: 2px solid #666;
		}

		input:hover {
			background-color: #A0CC52;
			border: 0;
		}
	</style>
</head>
<body>
	<script src="http://libs.cartocdn.com/cartodb.js/v3/3.15/cartodb.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

	<%= render "shared/header" %>
	<div class="form">
		<%= form_tag("/compare", method: "get") do %>
			<div>
				<%= label_tag :Año %>
				<%= select_tag "year1", options_for_select(@years, selected: @year1) %>
				<%= label_tag :Mes %>
				<%= select_tag "month1", options_for_select(@months, selected: @month1) %>
			</div>
			<div>
				<%= label_tag :Año %>
				<%= select_tag "year2", options_for_select(@years, selected: @year2) %>
				<%= label_tag :Mes %>
				<%= select_tag "month2", options_for_select(@months, selected: @month2) %>
				<%= submit_tag "Comparar" %>
			</div>
		<% end %>
	</div>
	<div class="compare-container">
		<div class="maps-container -half">
			<div id="map1" class="compare-map"></div>
			<div id="mini-map1" class="compare-canarias"></div>
		</div>
		<div class="maps-container -half">
			<div id="map2" class="compare-map"></div>
			<div id="mini-map2" class="compare-canarias"></div>
		</div>

	</div>

	<%= render "shared/footer" %>

	
	
</body>
</html>
